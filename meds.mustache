<!DOCTYPE html>
<html>
<head>
    <title>Meds List</title>
    <!-- Bootstrap CSS -->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <style>
        /* Fullscreen background image */
        .bg-image {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: url('/meds.jpg') no-repeat center center;
            background-size: cover;
            z-index: -1; /* Ensure image is behind content */
        }

        /* Flex container to center content */
        .full-screen {
            display: flex;
            align-items: center;
            justify-content: center;
            height: 100vh; /* Full viewport height */
            width: 100vw; /* Full viewport width */
            position: relative;
        }

        /* Content container */
        .content-container {
            padding: 20px;
            background: rgba(0, 0, 0, 0.5); /* Semi-transparent background for readability */
            color: white;
            border-radius: 8px;
            max-width: 800px; /* Optional: Set max width for content box */
            width: 100%; /* Responsive width */
        }

        /* Table text color */
        .table td, .table th {
            color: white; /* Ensure table text is white */
        }
        
        /* Table header color */
        .table thead th {
            color: #f8f9fa; /* Light color for the table header for contrast */
        }
    </style>
</head>
<body>
    <!-- Background Image -->
    <div class="bg-image"></div>

    <!-- Fullscreen Flex Container -->
    <div class="full-screen">
        <!-- Content -->
        <div class="content-container">
            <h1 class="mb-4">Meds List</h1>
            
            <!-- Table with Bootstrap classes -->
            <table class="table table-striped table-bordered">
                <thead class="thead-dark">
                    <tr>
                        <th>Medicine Name</th>
                        <th>Count</th>
                        <th>Brand</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    {{#meds}}
                    <tr>
                        <td>{{name}}</td>
                        <td>{{count}}</td>
                        <td>{{brand}}</td>
                        <td>
                            <!-- Delete button -->
                            <form action="/meds/delete/{{mid}}" method="POST" style="display:inline;">
                                <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                            </form>
                            <!-- Edit button -->
                            <a href="/meds/edit/{{mid}}" class="btn btn-warning btn-sm ml-2">Edit</a>
                        </td>
                    </tr>
                    {{/meds}}
                </tbody>
            </table>

            <!-- Add new button -->
            <a href="/add" class="btn btn-primary">Add New Medicine</a>
        </div>
    </div>

    <!-- Bootstrap JS and dependencies -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
